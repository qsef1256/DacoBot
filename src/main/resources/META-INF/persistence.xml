<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="net.qsef1256.dacobot">
        <properties>
            <!-- JDBC Setting -->
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/DacoBot"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Hibernate Setting -->
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.physical_naming_strategy"
                      value="net.qsef1256.dacobot.database.hibernate.SnakeCasePhysicalNamingStrategy"/>
            <property name="hibernate.current_session_context_class" value="thread"/>

            <!-- Debug/Performance Logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.generate_statistics" value="false"/>

            <!-- Auto DROP/CREATE Setting -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- HikariCP Setting -->
            <property name="hibernate.connection.provider_class"
                      value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="hibernate.hikari.minimumIdle" value="5"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.idleTimeout" value="30000"/>
            <property name="hibernate.hikari.dataSource.url" value="jdbc:mariadb://localhost:3306/DacoBot"/>
            <property name="hibernate.hikari.dataSource.user" value="root"/>
            <property name="hibernate.hikari.dataSource.password" value="1234"/>

        </properties>
    </persistence-unit>
</persistence>
